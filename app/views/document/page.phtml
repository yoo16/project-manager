<? include('_header.phtml') ?>

<? include('add_window.phtml'); ?>

<div class="">


  <?php if ($this->pages): ?>
    <?php foreach ($this->pages as $page): ?>
      <h3><?= $page['name'] ?>(<?= $page['label'] ?>)</h3>

      <table class="table">
        <thead class="thead-default">
        </thead>
        <?php foreach ($page['view'] as $view): ?>
          <tr>
            <th class="w-25">
              <?= $view['label'] ?>(<?= $view['name'] ?>)
            </th>

            <td class="">
                <div><?= nl2br($view['note']) ?></div>

              <dl>
                <?php foreach ($view['view_item'] as $view_item): ?>
                  <?php if ($view_item['note']): ?>
                    <dt>
                      <?= $this->attributes[$view_item['attribute_id']]['label'] ?>
                      (<?= $this->attributes[$view_item['attribute_id']]['name'] ?>)
                    </dt>
                    <dd><?= nl2br($view_item['note']) ?></dd>
                  <?php endif ?>
                  <?php if ($view_item['csv'] && $view_item['csv'] != 'active'): ?>
                    <dt>
                      <?= $this->attributes[$view_item['attribute_id']]['label'] ?>
                      (<?= $this->attributes[$view_item['attribute_id']]['name'] ?>)
                    </dt>
                    <dd>設定ファイル：<?= nl2br($view_item['csv']) ?>.csv</dd>
                  <?php endif ?>
                <?php endforeach ?>
              </dl>
            </td>

          </tr>
        <?php endforeach ?>
      </td>

    </tr>
  </table>
<?php endforeach ?>
<?php endif ?>
</div>
