    *
    * @param
    * @return void
    */
    function action_new() {
<? if ($model = $values['model']): ?>
        $this-><?= $model->value['entity_name'] ?> = DB::model('<?= $model->value['class_name'] ?>')->init()->takeValues($this->pw_posts['<?= $model->value['entity_name'] ?>']);
