   /**
    * edit
    *
    * @param
    * @return void
    */
    function action_edit() {
<? if ($model = $values['model']): ?>
        $this->checkEdit();

        $this-><?= $model->value['entity_name'] ?> = DB::model('<?= $model->value['class_name'] ?>')
                    ->fetch($this->pw_params['id'])
                    ->takeValues($this->pw_posts['<?= $model->value['entity_name'] ?>']);
<? endif ?>
    }

   /**
    * add
    *
    * @param
    * @return void
    */
    function action_add() {
        if (!isPost()) exit;
<? if ($model = $values['model']): ?>
        $posts = $this->pw_posts["<?= $model->value['entity_name'] ?>"];
        $<?= $model->value['entity_name'] ?> = DB::model('<?= $model->value['class_name'] ?>')->insert($posts);

        if ($<?= $model->value['entity_name'] ?>->errors) {
            $this->addErrorByModel($<?= $model->value['entity_name'] ?>);
            $this->redirectTo(['action' => 'new']);
        } else {
            $this->redirectTo(['action' => 'index']);
        }
<? endif ?>
    }

   /**
    * update
    *
    * @param
    * @return void
    */
    function action_update() {
        if (!isPost()) exit;
<? if ($model = $values['model']): ?>
        $posts = $this->pw_posts["<?= $model->value['entity_name'] ?>"];
        $<?= $model->value['entity_name'] ?> = DB::model('<?= $model->value['class_name'] ?>')->update($posts, $this->pw_params['id']);

        if ($<?= $model->value['entity_name'] ?>->errors) {
            $this->addErrorByModel($<?= $model->value['entity_name'] ?>);
        }
        $this->redirectTo(['action' => 'edit', 'id' => $this->pw_params['id']]);
<? endif ?>
    }

   /**
    * delete
    *
    * @param
    * @return void
    */
    function action_delete() {
        if (!isPost()) exit;
<? if ($values['model']): ?>
        DB::model('<?= $model->value['class_name'] ?>')->delete($this->pw_params['id']);
<? endif ?>
        $this->redirectTo();
    }

